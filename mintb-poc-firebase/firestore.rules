rules_version = '2';



service cloud.firestore {
  match /databases/{database}/documents {
    // 모든 경로에 인증 필요
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // 경매에 입찰할 때 포인트 체크
    match /auctions/{auctionId}/bids/{uid} {     
      allow write: if false;
    }
  }
}

